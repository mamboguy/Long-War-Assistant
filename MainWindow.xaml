<Window
    x:Class="Long_War_Assistant.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Long_War_Assistant"
    mc:Ignorable="d"
    Title="Long War Assistant"
    Height="1000"
    Width="1000"
    Background="Black">
    <Grid>
        <DockPanel 
            x:Name="_currentView_Panel"
            Margin="170 10 10 10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            LastChildFill="False" />
        <Button Style="{StaticResource NavigationButton}"
                Content="Perk List"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="PerkList_Button_Click" />
        <Button 
            Style="{StaticResource NavigationButton}"
            Margin="10 50 0 0"
            Content="Nothing"
            Click="NothingButton_Click"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
    </Grid>
</Window>
